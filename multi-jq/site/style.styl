@import url(http://fonts.googleapis.com/css?family=Open\+Sans)
/* Variables */
base-font = 'Open Sans',Georgia,serif
base-font-size = 100%\/1.5
base-font-color = #222
body-font = normal 1.3125em/1.52381em base-font
common-border-color = #333
header-font-color = #900
main-bg-color = #fff
selection-color = #c47529
selection-text-color = main-bg-color
subtle-color = #ccc
table-border = 1px solid subtle-color

/* Mix-ins */
fontSmoothing()
    -webkit-font-smoothing antialiased
    font-smoothing antialiased
    text-rendering optimizeLegibility

vendorize(property, value)
    -webkit-{property} value
    -moz-{property} value
    -ms-{property} value
    {property} value

hideText()
    overflow hidden
    text-indent -9999px

bgImage(value)
    background url(value) no-repeat scroll 0 0 transparent

/* Base reset */
article,
aside,
details,
figcaption,
figure,
footer,
header,
hgroup,
menu,
nav,
section,
dialog
    display: block

audio[controls],
canvas,
video
    display: inline-block
    *display: inline
    zoom: 1

html
    height: 100%
    font-size: 100%
    overflow-y: scroll
    -webkit-text-size-adjust: 100%

body
    margin: 0
    min-height: 100%
    fontSmoothing()

body,
button,
input,
select,
textarea
    font: base-font-size base-font
    *font-size: 1em
    color: base-font-color

p,
blockquote,
q,
pre,
address,
hr,
code,
samp,
dl,
ol,
ul,
form,
table,
fieldset,
menu,
img
    margin: 0 0 1.5em
    padding: 0

h1,
h2,
h3,
h4,
h5,
h6
    margin: 0
    text-shadow: 1px 1px 1px rgba(0,0,0,.10)

h1,
h2,
h3
    color: header-font-color

h1
    font-size: 1.66667em
    line-height: 1.2em
    margin-bottom: 1.2em

h2
    font-size: 1.33333em
    line-height: 1em
    margin-bottom: 1.5em

h3,
h4,
h5,
h6
    font-size: 1em
    line-height: 1.5em
    margin-bottom: 1.5em

p,
ul,
blockquote,
pre,
td,
th,
label
    margin: 0
    font-size: 1em
    line-height: 1.5em
    margin-bottom: 1.5em

small,
p.small
    margin: 0
    font-size: .875em
    line-height: 1.7142857142857em
    margin-bottom: 1.7142857142857em

pre
    white-space: pre
    white-space: pre-wrap
    word-wrap: break-word

pre,
code,
kbd,
samp
    font-size: 1em
    line-height: 1.5em
    margin-bottom: 1.5em

table
    border-collapse: collapse
    border-spacing: 0
    margin-bottom: 1.5em

th
    text-align: left

tr,
th,
td
    padding-right: 1.5em
    border-bottom: 0 solid common-border-color

form
    margin: 0

fieldset
    border: 0
    padding: 0

textarea
    overflow: auto
    vertical-align: top

legend
    *margin-left: -.75em

button,
input,
select,
textarea
    vertical-align: baseline
    *vertical-align: middle

button,
input
    line-height: normal
    *overflow: visible

button,
input[type="button"],
input[type="reset"],
input[type="submit"]
    cursor: pointer
    vendorize(appearance, button)

input[type="checkbox"],
input[type="radio"]
    vendorize(box-sizing, border-box)

input[type="search"]
    vendorize(appearance, textfield)
    vendorize(box-sizing, content-box)

input[type="search"]::-webkit-search-decoration
    vendorize(appearance, none)

button::-moz-focus-inner,
input::-moz-focus-inner
    border: 0
    padding: 0

blockquote,
q
    quotes: none

blockquote:before,
blockquote:after,
q:before,
q:after
    content: ''
    content: none

blockquote,
q,
cite
    font-style: italic

blockquote
    padding-left: 1.5em
    border-left: 3px solid #ccc

blockquote > p
    padding: 0

ul,
ol
    list-style-position: inside
    padding: 0

li ul,
li ol
    margin: 0 1.5em

dl dd
    margin-left: 1.5em

dt
    font-family: base-font

a
    color: base-font-color
    &:hover
        color: header-font-color

a:focus
    outline: thin dotted

a:hover,
a:active
    outline: none

figure
    margin: 0

img,
object,
embed,
video
    max-width: 100%
    _width: 100%

img
    border: 0
    -ms-interpolation-mode: bicubic

svg:not(:root)
    overflow: hidden

abbr[title],
dfn[title]
    border-bottom: 1px dotted common-border-color
    cursor: help

ins,
mark
    text-decoration: none

mark
    background: selection-color

ins
    background: selection-color

del
    text-decoration: line-through

::-moz-selection
    background: selection-color
    color: selection-text-color
    text-shadow: none

::selection
    background: selection-color
    color: selection-text-color
    text-shadow: none

strong,
b,
dt
    font-weight: 700

dfn
    font-style: italic

var,
address
    font-style: normal

sub,
sup
    font-size: 75%
    line-height: 0
    position: relative
    vertical-align: baseline

sup
    top: -.5em

sub
    bottom: -.25em

span.amp
    font-style: italic
    font-size: 110%
    line-height: 0
    position: relative
    vertical-align: baseline

.cf:before,
.cf:after
    content: ""
    display: table

.cf:after
    clear: both

.cf
    zoom: 1

/* DEFAULT MOBILE STYLE */
body
    background-color: main-bg-color
    height: 100%
    padding: 0
    position: relative
    text-rendering: optimizeLegibility
    -webkit-text-size-adjust: 100%

nav
    display: block
    margin-bottom: 1em
    ul
        margin: 0
        text-align: center
        text-transform: uppercase
        li
            display: inline
            font-size: 0.75em
            line-height: 0.75em
            padding: 0
    a,
    a:hover
        text-decoration: none

header
    margin-bottom: 2.90476em
    text-align: right
    h1
        font-size: 2em
        margin: 0

section
    display: inline-block
    margin: 0
    padding-bottom: 2em
    width: 100%
    ol
        list-style-position: outside;
        margin-left: 1.5em
        padding-left: 0.5625em
    ul
        list-style: square outside none;
        margin-left: 1.1875em
        li
            padding-left: 0.5em
    li + li
        margin-top: 0.5em

blockquote
    margin: 1.5em
    padding-left: 0.5625em

footer
    font-size: 0.90476em
    line-height: 1.26316em
    text-transform: lowercase

footer
    > nav
    > span
        display: block
        text-align: center

#content
    width: 92%
    margin: 0 auto

table
    border-bottom: table-border
    font-size: 0.75em
    margin: 0 0 1.14286em
    width: 100%
    td
        border: table-border
        border-style: solid solid none
        height: 1.52381em
        padding: 0
        vertical-align: top
    tr.mid td
        border-style: dashed solid solid
    tr.blocked
        background-color: #ccc

hr
    border-top: 1px solid common-border-color
    border-style: solid none none
    display: block
    margin: 1.5625em 0
    width: 100%

.to-top
    color: subtle-color
    float: right

.show
    display: block !important

.hide
    display: none !important

.clear-it
    clear: both
    display: block

.flush-bottom
    margin-bottom: 0

#overlay
    background-color: rgba(0,0,0,0.5)
    height: 100%
    left: 0
    position: fixed
    top: 0
    width: 100%
    z-index: 9

.four-oh-four
    bgImage('../img/404.gif')
    background-size: 100%
    display: inline-block
    height: 9.0625em
    margin: 1.5em auto
    max-width: 21.25em
    width: 100%

/* media Queries */

/* MOBILE PORTRAIT */
@media only screen and (min-width: 320px) {}

@media only screen and (min-width: 380px) {}

/* MOBILE LANDSCAPE */
@media only screen and (min-width: 480px)
    header h1
            font-size: 3em
    table
        font-size: 100%
        td
            padding: 0 2px

/* TABLET/NETBOOK */
@media only screen and (min-width: 768px)
    body
        padding-top: 2.90476em

    #content
        width: 41.375em

/* LANDSCAPE TABLET/NETBOOK/LAPTOP */
@media only screen and (min-width: 1024px) {}

/* DESKTOP */
@media only screen and (min-width: 1280px) {}

/* WIDESCREEN */
/* Increased body size for legibility */
@media only screen and (min-width: 1400px)
    body
        font-size: 116.75%

    /* 18.5px / 28px */
/* PRINT */
@media print
    *
        background: transparent !important
        color: black !important
        text-shadow: none !important
        filter: none !important
        -ms-filter: none !important

    /* Black prints faster */
    a,
    a:visited
        color: common-border-color !important
        text-decoration: underline

    a[href]:after
        content: " (" attr(href) ")"

    abbr[title]:after
        content: " (" attr(title) ")"

    .ir a:after,
    a[href^="javascript:"]:after,
    a[href^="#"]:after
        content: ""

    /* Don't print links for images, javascript or internal links */
    pre,
    blockquote
        border: 1px solid common-border-color
        page-break-inside: avoid

    thead
        display: table-header-group

    /* Repeat header row at top of each printed page */
    tr,
    img
        page-break-inside: avoid

    img
        max-width: 100% !important

    @page
        margin: 0.5cm
    p,
    h2,
    h3
        orphans: 3
        widows: 3

    h2,
    h3
        page-break-after: avoid